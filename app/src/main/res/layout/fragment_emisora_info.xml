<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/lin_layout_info_emisora"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        tools:context=".Fragments.EmisoraInfoFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo_radio"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                tools:srcCompat="@null" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/tv_descripcion_emisora"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Descripcion"
                android:textColor="@color/text_color" />


        </LinearLayout>
        <!-- TODO: Update blank fragment layout -->




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_weight="0.05"
                android:adjustViewBounds="true"
                android:src="@drawable/web" />

            <TextView
                android:id="@+id/tv_web_emisora"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_weight="0.95"
                android:text="Ninguna"
                android:textColor="@color/color_text"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_weight="0.05"
                android:adjustViewBounds="true"
                android:baselineAlignBottom="false"
                android:cropToPadding="false"
                android:src="@drawable/telefono" />

            <TextView
                android:id="@+id/tv_telef_emisora"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_weight="0.95"
                android:text="Ninguna"
                android:textColor="@color/color_text"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_weight="0.05"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:src="@drawable/ubicacion" />

            <TextView
                android:id="@+id/tv_ubicacion_emisora"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="15dp"
                android:layout_weight="0.95"
                android:lines="2"
                android:text="Ninguna"
                android:textColor="@color/color_text"
                android:textSize="12sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tv_redesSociales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

        </LinearLayout>


    </LinearLayout>

</ScrollView>