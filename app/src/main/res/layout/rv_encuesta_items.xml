<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="25dp"
        android:orientation="vertical"
        android:background="@drawable/round_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dias_restante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fin"
                android:textColor="@color/color_text2"
                android:textSize="15dp"
                android:textAlignment="viewEnd"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_titulo_encuesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo_Encuesta"
                android:textColor="@color/text_color"
                android:textSize="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radioSelect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="opcion1"
                        android:buttonTint="@color/text_color"
                        android:textColor="@color/text_color"
                        />

                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:text="opcion2"
                        android:buttonTint="@color/text_color"
                        android:visibility="gone"/>
                    <RadioButton
                        android:id="@+id/radio3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:buttonTint="@color/text_color"
                        android:text="opcion3"
                        android:visibility="gone"/>
                    <RadioButton
                        android:id="@+id/radio4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:buttonTint="@color/text_color"
                        android:text="opcion4"
                        android:visibility="gone"/>
                    <RadioButton
                        android:id="@+id/radio5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:buttonTint="@color/text_color"
                        android:text="opcion5"
                        android:visibility="gone"/>

                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonsend"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="right"
                android:accessibilityHeading="false"
                android:background="@drawable/round_button2"
                android:text="@string/text_votar"
                android:textSize="14dp"
                android:textColor="@null"
                android:textStyle="bold"
                tools:textAllCaps="false" />

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>